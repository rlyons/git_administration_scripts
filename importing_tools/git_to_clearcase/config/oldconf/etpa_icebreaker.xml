
<config>
        <!-- The values for these properties can be defined using environment variables
        or locally defined variables in this file -->

        <!-- This is the directory where the log files are written -->
        <property name="basedir" value="/cme/gfix/gitimports/git2cc/projects/gitrepos" />

        <!-- This is the directory where the repo is created  -->
        <property name="repodir" value="${basedir}" />

        <!-- for view creation  -->
        <property name="view_host" value="ccview1" />
        <property name="view_stgloc" value="/net/ccview1/viewstg1" />
        <property name="view_prefix" value="cmgit2ccicebrk" />

        <!-- Max. number of threads to run during the import process  -->
        <property name="max_processes" value="4" />

        <!-- PVOB context for components and streams -->
        <pvob name="/cc/ETPA_CCM_PROJECT">
                <!-- GIT REPO and the associated component -->
                <gitrepo url="ssh://git@cmegit/etpa_icebreaker.git" name="etpa_icebreaker" component="ETPA_ICEBREAKER">
                        <!-- branch mapping at the repo level overrides the mapping at the higher level -->
                        <branch name="release" stream="ETPA_ICEBREAKER1.0_integration" activity="CQPRD00995074"/>
                </gitrepo>
        </pvob>
</config>

